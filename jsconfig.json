{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "paths": {
      "src/*": ["./src/*"],
      "root/*": ["./*"]
    }
  },
  "include": [
    "./src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "tmp",
    "temp"
  ]
}
